<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv_flash"
        style="@style/ShopeeTextStyle.Red.Bold"
        android:text="@string/flash_sale"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/lihat_lainnya"
        android:layout_marginEnd="20dp"
        tools:ignore="RelativeOverlap" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_flash">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:elevation="4dp"
                android:translationZ="4dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_button_transparan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/img_watch"
                        android:contentDescription="@string/flash_sale" />

                    <TextView
                        style="@style/ShopeeTextStyle.Red.Bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/rp62_500"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:elevation="4dp"
                android:translationZ="4dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_button_transparan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/img_iphone"
                        android:contentDescription="@string/flash_sale" />

                    <TextView
                        style="@style/ShopeeTextStyle.Red.Bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/rp120_500"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:elevation="4dp"
                android:translationZ="4dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_button_transparan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/img_samsung"
                        android:contentDescription="@string/flash_sale" />

                    <TextView
                        style="@style/ShopeeTextStyle.Red.Bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/rp100_000"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:elevation="4dp"
                android:translationZ="4dp"
                app:cardCornerRadius="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_button_transparan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/img_macbook"
                        android:contentDescription="@string/flash_sale" />

                    <TextView
                        style="@style/ShopeeTextStyle.Red.Bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="@string/rp200_000"
                        android:textSize="16sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>